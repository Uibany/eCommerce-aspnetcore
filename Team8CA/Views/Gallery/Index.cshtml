@{
    ViewData["Title"] = "Gallery Page";
    string[] imgs = (string[])ViewData["images"];
}

<title>G8Software</title>

<style>
    .container {
        position: relative;
        width: 100%;
        object-fit:scale-down
    }

    .productdesc {
        max-width:350px;
        width: 100%;
        background-color: white;
        text-align:center;
        padding-top: 3%;
        padding-bottom: 3%;
        position: relative;
    }

    .middle {
        transition: .5s ease;
        opacity: 0;
        position: absolute;
        top: 50%;
        left: 35%;
        transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        text-align: center;
    }

    .middle2 {
        transition: .5s ease;
        opacity: 0;
        position: absolute;
        top: 50%;
        left: 65%;
        transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        text-align: center;
    }

    .size {
        width: 350px
    }

    .container:hover >.image {
        opacity: 0.3;
    }

    .container:hover >.middle {
        opacity: 1;
    }

    .container:hover >.middle2 {
        opacity: 1;
    }

    .text {
        background-color: #4dc2dc;
        color: white;
        font-size: 14px;
        padding: 14px 30px;
    }

    #pager {
        padding-left: 5%
    }

    #pager p {
        margin-left: 5%;
    }

    .sidenav {
        height: 80%;
        width:20%;
        max-width: 250px;
        position: absolute;
        z-index: 0;
        top: 0;
        left: 0px;
        background-color: #fff;
        overflow-x: auto;
        padding-top: 0px;
        margin-top:0;
        margin-left: -10%
    }

    .sidenav a {
        text-decoration: none;
        font-size: 20px;
        color: #818181;
        display: block;
    }

    .sidenav a:hover {
        color: #000000;
    }

    div.polaroid {
        width: 90%;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        
    }

    .table {
        margin-left: 10%;
        width:100%;
        overflow-x: auto;
     
    }

    .responsive {
        width:100%;
        max-width:350px;
        height:100%;
        max-height:235px;
        

    }

</style>

<div class="sidenav">
    <h2>Categories</h2>
    <a href="#security">Antivirus And Security</a>
    <ul>
        <li><a href="#security">Antivirus And Security</a></li>
        <li><a href="#security">Antivirus And Security</a></li>
        <li><a href="#security">Antivirus And Security</a></li>
    </ul>
    <a href="#business">Business And Office</a>
    <ul>
        <li><a href="#business">Business And Office</a></li>
        <li><a href="#business">Business And Office</a></li>
        <li><a href="#business">Business And Office</a></li>
    </ul>
    <a href="#design">Design and Illustration</a>
    <ul>
        <li><a href="#design">Design and Illustration</a></li>
        <li><a href="#design">Design and Illustration</a></li>
        <li><a href="#design">Design and Illustration</a></li>
    </ul>
</div>

<div class="table">
    
    <table> 
    @for (int i = 0; i < imgs.Length; i += 3)
    {
        <tr>
            @for (int j = 0; j < 3 && i + j < imgs.Length; j++)
            {
            <td>
                <div class="polaroid">
                    @*images from database*@
                    @{ string url = ViewData["url_prefix"] +
                                 imgs[i + j] + ViewData["url_postfix"];
                    }



                    <div class="container">
                        <img src=@url class="responsive" />
                        <div class="middle">
                            <button type="button" class="btn btn-primary view">View</button>
                        </div>
                        <div class="middle2">
                            <button type="button" class="btn btn-primary add-to-cart">Add to Cart</button>
                        </div>
                    </div>
                        

                    <div class="productdesc">
                        <h5>Productname</h5>
                        <h6>This is a .....</h6>
                        <h5><b>$999</b></h5>
                    </div>
                </div>

                    <br />
                </td>
            }
        </tr>
    }
</table>
</div>

