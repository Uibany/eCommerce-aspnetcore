@using PagedList
@using PagedList.Mvc
@using System.Web.Mvc
@model PagedList.IPagedList<Team8CA.Models.GalleryProducts>
@{
    ViewData["Title"] = "Gallery Page";
    string[] imgs = (string[])ViewData["images"];
}

<h1>Products</h1>

<style>
    .container {
        position: relative;
        width: 100%;
    }

    .middle {
        transition: .5s ease;
        opacity: 0;
        position: absolute;
        top: 50%;
        left: 35%;
        transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        text-align: center;
    }

    .middle2 {
        transition: .5s ease;
        opacity: 0;
        position: absolute;
        top: 50%;
        left: 65%;
        transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        text-align: center;
    }

    .size {
        width: 350px
    }

    .container:hover .image {
        opacity: 0.3;
    }

    .container:hover > .middle {
        opacity: 1;
    }

    .container:hover > .middle2 {
        opacity: 1;
    }

    /*.mouseout:not( :hover ) {
        opacity: 1;
    }*/

    .text {
        background-color: #4dc2dc;
        color: white;
        font-size: 16px;
        padding: 16px 32px;
    }

    #pager {
        padding-left: 5%
    }

    #pager p {
        margin-left: 5%;
     }  
</style>

<table>
    @for (int i = 0; i < imgs.Length; i += 3)
    {
        <tr>
            @for (int j = 0; j < 3 && i + j < imgs.Length; j++)
            {
                <td>
                    @*images from database*@
                    @{ string url = ViewData["url_prefix"] +
                       imgs[i + j] + ViewData["url_postfix"];
                    }

                    <div class="container">
                        <img src=@url width="350" height="235" />
                        <div class="middle">
                            <div class="text">View</div>
                        </div>
                        <div class="middle2">
                            <div class="text">To cart</div>
                        </div>
                    </div>

                </td>
            }
        </tr>
    }
</table>

<div id="pager">
    <p> Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount</p>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>

<table>
    <tr>
        <div class="container">
            <td><img src="../images/creativecloud.jpg" width="250" height="235" /> </td>
            <td><img src="../images/visio.png" width="350" height="235" /> </td>
            <td><img src="../images/project.png" width="350" height="235" /> </td>
    </tr>
    <tr>
        <td><img src="../images/avira.jpeg" width="350" height="235" /> </td>
        <td><img src="../images/adguard.jpeg" width="350" height="235" /> </td>
        <td><img src="../images/adguard.jpeg" width="350" height="235" /> </td>
        <div class="middle">
            <div class="text">View</div>
        </div>
        <div class="middle2">
            <div class="text">To cart</div>
        </div>
        </div>
    </tr>

</table>