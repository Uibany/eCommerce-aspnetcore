<div class="table">

    <table>
        @for (int i = 0; i < imgs.Length; i += 3)
        {
            <tr>
                @for (int j = 0; j < 3 && i + j < imgs.Length; j++)
                {
                    <td>
                        <div class="polaroid">
                            @*images from database*@
                            @{ string url = ViewData["url_prefix"] +
                                            imgs[i + j] + ViewData["url_postfix"];
                            }

                            <div class="container">
                                <img src=@url class="responsive" />
                                <div class="middle">
                                    <button type="button" class="btn btn-primary view">View</button>
                                </div>
                                <div class="middle2">
                                    <button type="button" class="btn btn-primary add-to-cart" onclick="updateCart(@Html.Raw("'" + "/Home/AddToCart?prdId=" + i + "'"))">Add to Cart</button>
                                </div>
                            </div>


                            <div class="productdesc">
                                <h5>Productname</h5>
