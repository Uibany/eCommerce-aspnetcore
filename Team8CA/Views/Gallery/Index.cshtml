@{
    ViewData["Title"] = "Gallery Page";
    string[] imgs = (string[])ViewData["images"];
}

<title>G8Software</title>

<style>
    .container {
        position: relative;
        width: 100%;
    }

    .middle {
        transition: .5s ease;
        opacity: 0;
        position: absolute;
        top: 50%;
        left: 35%;
        transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        text-align: center;
    }

    .size {
        width: 350px
    }

    .container:hover >.image {
        opacity: 0.3;
    }

    .container:hover >.middle {
        opacity: 1;
    }

    .text {
        background-color: #4dc2dc;
        color: white;
        font-size: 14px;
        padding: 14px 30px;
    }

    #pager {
        padding-left: 5%
    }

    #pager p {
        margin-left: 5%;
    }

    .sidenav {
        height: 80%;
        position: absolute;
        z-index: 1;
        top: 0;
        left: 0px;
        background-color: #fff;
        overflow-x: hidden;
        padding-top: 0px;
        margin-left: -300px
    }

    .sidenav a {
        text-decoration: none;
        font-size: 20px;
        color: #818181;
        display: block;
    }

    .sidenav a:hover {
        color: #000000;
    }

</style>

<div class="sidenav">
    <h2>Categories</h2>
    <a href="#security">Antivirus And Security</a>
    <ul>
        <li><a href="#security">Antivirus And Security</a></li>
        <li><a href="#security">Antivirus And Security</a></li>
        <li><a href="#security">Antivirus And Security</a></li>
    </ul>
    <a href="#business">Business And Office</a>
    <ul>
        <li><a href="#business">Business And Office</a></li>
        <li><a href="#business">Business And Office</a></li>
        <li><a href="#business">Business And Office</a></li>
    </ul>
    <a href="#design">Design and Illustration</a>
    <ul>
        <li><a href="#design">Design and Illustration</a></li>
        <li><a href="#design">Design and Illustration</a></li>
        <li><a href="#design">Design and Illustration</a></li>
    </ul>
</div>

<table>
    @for (int i = 0; i < imgs.Length; i += 3)
    {
        <tr>
            @for (int j = 0; j < 3 && i + j < imgs.Length; j++)
            {
                <td>
                    @*images from database*@
                    @{ string url = ViewData["url_prefix"] +
                            imgs[i + j] + ViewData["url_postfix"];
                    }

                    <div class="container">
                        <img src=@url width="350" height="235" />
                        <div class="middle">
                            <button type="button" class="middle">View</button>
                            <div class="middle">
                                <button type="button" class="middle">Add to Cart</button>
                            </div>
                        </div>
                    </div>
                </td>
            }
        </tr>
    }
</table>

