@{
    ViewData["Title"] = "Gallery Page";
    string[] imgs = (string[])ViewData["images"];
}


<h1>Products</h1>

<style>
    .container {
        position: relative;
        width: 100%;
    }

    .middle {
        transition: .5s ease;
        opacity: 0;
        position: absolute;
        top: 50%;
        left: 35%;
        transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        text-align: center;
    }

    .middle2 {
        transition: .5s ease;
        opacity: 0;
        position: absolute;
        top: 50%;
        left: 65%;
        transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        text-align: center;
    }

    .container:hover .image {
        opacity: 0.3;
    }

    .container:hover >.middle {
        opacity: 1;
    }

    .container:hover >.middle2 {
        opacity: 1;
    }

   /*.mouseout:not( :hover ) {
        opacity: 1;
    }*/

    .text {
        background-color: #4dc2dc;
        color: white;
        font-size: 16px;
        padding: 16px 32px;
    }
</style>

<table>
    @for (int i = 0; i < imgs.Length; i += 3)
    {
        <tr>
            @for (int j = 0; j < 3 && i + j < imgs.Length; j++)
            {
                <td>
                    @*images from database - pull image URL where productID = db.productID*@
                    @{
                        string url = ViewData["url_prefix"] +
                        imgs[i + j] + ViewData["url_postfix"];
                    }

                    <div class="container">
                        <img src=@url width="350" height="235" />
                        <div class="middle">
                            <div class="text">View</div>
                        </div>
                        <div class="middle2">
                            <div class="text">To cart</div>
                        </div>
                    </div>
                </td>
            }
        </tr>
    }
</table>