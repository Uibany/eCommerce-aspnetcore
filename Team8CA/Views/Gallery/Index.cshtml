@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model PagedList.IPagedList<Team8CA.Models.Products>
@using PagedList
@using PagedList.Mvc
@using PagedList.Core  

@{
    ViewData["Title"] = "Gallery Page";
    List<Products> product = (List<Products>)ViewData["product"];
}

<title>G8Software</title>

<style>
    .container {
        width: 100%;
        position: relative;
        min-width: 50%;
    }

    .productdesc {
        max-width: 350px;
        width: 100%;
        background-color: white;
        text-align: center;
        padding-top: 3%;
        padding-bottom: 3%;
        position: relative;
    }

    .middle {
        transition: .3s ease;
        opacity: 0;
        position: absolute;
        top: 50%;
        left: 35%;
        transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        text-align: center;
        font-size: 1vw;
    }

    .middle2 {
        transition: .3s ease;
        opacity: 0;
        position: absolute;
        top: 50%;
        left: 65%;
        transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        text-align: center;
        font-size: 1vw;
    }

    .size {
        width: 350px
    }

    .container:hover > .productImage {
        opacity: 0.4;
        transition: 0.3s ease-in;
    }

    .container:hover > .middle {
        opacity: 1;
    }

    .container:hover > .middle2 {
        opacity: 1;
    }

    .text {
        background-color: #4dc2dc;
        color: white;
        font-size: 14px;
        padding: 14px 30px;
    }

    #pager {
        padding-left: 5%
    }

        #pager p {
            margin-left: 5%;
        }

    .sidenav {
        /*height: 80%;
        width: 20%;*/
        width: 220px;
        position: absolute;
        z-index: 0;
        top: 0;
        left: 0px;
        background-color: #fff;
        overflow-x: auto;
        padding-top: 0px;
        margin-top: 0;
        /*margin-left: -10%;*/
        font-size: 18px;
        line-height: 2;
    }

        .sidenav a {
            text-decoration: none;
            font-size: 18px;
            color: #000000;
            display: block;
        }

            .sidenav a:hover {
                color: #000000;
                background-color: #acacac;
            }

    .polaroid {
        width: 95%;
        box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.3);
    }

        .polaroid:hover {
            box-shadow: 0 10px 20px 0 rgba(0, 0, 0, 0.5);
            transition: opacity 0.3s ease-in-out;
        }

    .dropdown-btn {
        text-decoration: none;
        font-size: 18px;
        display: block;
    }

    .dropdown-container {
        display: none;
        padding-left: 30px;
    }

    .gallery-table {
        padding-left: 250px;
        width: 100%;
        overflow-x: auto;
        min-width: 1000px;
    }

    .responsive {
        width: 100%;
        max-width: 350px;
        height: 100%;
        max-height: 235px;
    }

    .btn {
        font-size: 14px;
    }
</style>

@section Scripts
    {
    <script>
        var updateCart = function (url) {
            $("RightBar").load(url);
        };
    </script>
}

<div class="row">

    <div class="sidenav">
        <h2>Categories</h2>
        <a class="dropdown-btn" href="/gallery">Home</a>
        <a class="dropdown-btn" href="/gallery/antivirusandsecurity">
            Antivirus And Security
            @*<span class="fas fa-caret-down first"></span>*@
        </a>
        @*<div class="dropdown-container">
                <a href="#security">Antivirus And Security</a>
                <a href="#security">Antivirus And Security</a>
                <a href="#security">Antivirus And Security</a>
            </div>*@
        <a class="dropdown-btn" href="/gallery/businessandoffice">
            Business And Office
            @*<span class="fas fa-caret-down first"></span>*@
        </a>
        @*<div class="dropdown-container">
                <a href="#business">Business And Office</a>
                <a href="#business">Business And Office</a>
                <a href="#business">Business And Office</a>
            </div>*@
        <a class="dropdown-btn" href="/gallery/designandillustration">
            Design and Illustration
            @*<span class="fas fa-caret-down first"></span>*@
        </a>
        @*<div class="dropdown-container">
                <a href="#design">Design and Illustration</a>
                <a href="#design">Design and Illustration</a>
                <a href="#design">Design and Illustration</a>
            </div>*@

    </div>

    <div class="gallery-table">
        <table>
            @for (int i = 0; i < product.Count; i += 3)
            {
                <tr>
                    @for (int j = 0; j < 3 && i + j < product.Count; j++)
                    {
                        <td>
                            <div class="polaroid">
                                @*images from database*@
                                @{
                                    int id = i + j;
                                    string imgPath = product[id].ProductPic;
                                }

                                <div class="container">
                                    <img src=@imgPath class="responsive productImage" />
                                    <div class="middle">
                                        <a type="button" class="btn btn-primary view" asp-controller="Gallery" asp-action="ProductDetailPage" asp-route-id="@(product[id].Id)">View</a>
                                    </div>
                                    <div class="middle2">
                                        <button type="button" class="btn btn-primary add-to-cart" onclick="updateCart(@Html.Raw("'" + "/Home/AddToCart?prdId=" + id + "'"))">Add to Cart</button>
                                    </div>
                                </div>

                                <div class="productdesc">
                                    <h5 style="height: 50px">@product[id].ProductName</h5>
                                    <p class="text-muted p-2" style="overflow:auto; height: 100px">@product[id].ProductDescription</p>
                                    <h5><b>$@product[id].ProductPrice</b></h5>
                                </div>

                            </div>

                            <br />
                        </td>
                    }
                </tr>
            }

            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

            @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
        </table>
    </div>
</div>


<script>
    // Workaround to fix style of text for showing items .. through ..
    // Problem related to Boostrap 4 according to issue in link below
    // https://github.com/dncuug/X.PagedList/issues/127
    $(document).ready(function () {
        $('ul.pagination > li.disabled > a').addClass('page-link');
    });
</script>
