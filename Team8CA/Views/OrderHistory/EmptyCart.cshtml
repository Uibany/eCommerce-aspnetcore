
@{
    ViewData["Title"] = "EmptyCart";
}

<head>
    <style>
        .center {
            margin: auto;
            width: 30%;
            padding: 20px;
            text-align: center;
        }

        img {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        a:link, a:visited {
            background-color: #4CAF50;
            color: white;
            padding: 14px 25px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
        }

        a:hover, a:active {
            background-color: #47de4d;
        }
    </style>
</head>
<body>
    <div class="center">
        <img src="~/Images/emptycart.png" width="200" height="200">
        <h3><strong>Your Cart is Empty</strong></h3>
        <a href="/gallery">Continue shopping</a>
    </div>
</body>

