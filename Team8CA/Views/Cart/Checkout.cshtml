@model Order
@using Microsoft.Extensions.Options

@inject IOptions<Team8CA.Services.StripeSettings> Stripe

@{
    ViewData["Title"] = "ShoppingCart";
    List<ShoppingCartItem> shoppingcartitems = (List<ShoppingCartItem>)ViewData["shoppingcartitems"];
}

<form method="post">
    <br />
    <div class="backgroundWhiteBorder">
        <div class="container">
            <div class="card">
                <div class="card-header bg-dark text-light ml-0 row container">
                    <div class="col-6">
                        <i class="fa fa-shopping-cart"></i> &nbsp;
                        Order Summary
                    </div>
                    <div class="col-6 text-right">
                        <a asp-area="" asp-controller="Cart" asp-action="Index" class="btn btn-outline-info btn-sm">Back to cart</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-6 pb-4">
                                <div class="row">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">Billing Address:</span>
                                    </h4>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Name</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="Name" type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Phone</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="PhoneNumber" type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Street Address</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="StreetAddress"  type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>City</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="City" type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>State</label>
                                    </div>
                                    <div class="col-9">
                                        <input  asp-for="State" type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Postal Code</label>
                                    </div>
                                    <div class="col-9">
                                        <input  asp-for="PostalCode" type="text" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-5 offset-lg-1">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-info">Order Summary:</span>
                                </h4>
                                <ul class="list-group mb-3">
                                    @{ double subtotal = 0;
                                        double total = 0;}
                                    @foreach (ShoppingCartItem cartitem in shoppingcartitems)
                                        {
                                        <li class="list-group-item d-flex justify-content-between">
                                            <div>
                                                <h6 class="my-0">@cartitem.Products.ProductName</h6>
                                                <small class="text-muted">Price: $@cartitem.Products.ProductPrice</small>
                                                <small class="text-muted">Quantity: @cartitem.Quantity</small>
                                            </div>
                                            @{ subtotal = @cartitem.Products.ProductPrice * @cartitem.Quantity;
                                                total += subtotal;}
                                            <span class="text-muted">$ @subtotal</span>
                                        </li>
                                                }
                                    <li class="list-group-item d-flex justify-content-between bg-light">
                                        <small class="text-info">Total ($)</small>
                                        <strong class="text-info">$@total</strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-8 pt-2">
                            @*<p style="color:maroon; font-size:14px;">Estimate Arrival Date: @DateTime.Now.AddDays(0).ToShortDateString() - @DateTime.Now.AddDays(3).ToShortDateString()</p>*@
                        </div>
                        <div class="col-12 col-md-4">

                            @{
                                var OrderTotalForStripe = @total * 100;
                            }
                            @*<script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                                    data-key="@Stripe.Value.PublishableKey"
                                    data-amount="@OrderTotalForStripe"
                                    data-name="Bulky Book"
                                    data-label="Place Order"
                                    data-description="Get Books, For Less"
                                    data-locale="auto"
                                    data-allow-remember-me="false"
                                    data-image="https://stripe.com/img/documentation/checkout/marketplace.png">
                            </script>
                            <script>
                                document.getElementsByClassName("stripe-button-el")[0].style.display = 'none';
                            </script>*@
                            <input type="submit" value="Place Order" class="btn btn-success form-control"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
